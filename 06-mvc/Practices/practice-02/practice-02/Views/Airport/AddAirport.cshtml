<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

<form method="post" action="@Url.Action("Create")" style="display: inline-block; width: 70%; position: absolute; top: 3%; left: 8%;">

    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Airport name</label>
        <div class="col-sm-10">
            <input type="text" name="name" class="form-control" id="colFormLabel" placeholder="Airport name">
        </div>
    </div>
    <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Airport City</label>
        <div class="col-sm-10">
            <input type="text" name="city" class="form-control" id="colFormLabel" placeholder="Airport city">
        </div>
    </div>
    <div class="form-check" style="">
        <label class="form-check-label" for="exampleCheck1">Is International</label>
        <input type="checkbox" name="isinternational" value="true" class="form-check-input" id="exampleCheck1" style="position: absolute; left: 19%;">
    </div>

    <div>
        <label>Airline: </label>
        <select name="position" class="btn btn-secondary dropdown-toggle">
            @foreach (var position in ViewData["positions"] as List<practice_02.Models.Position>)
            {
                <option value="@position.Name">@position.Name</option>
            }
        </select>
    </div>

    <div class="submitButtonCentered" style="display: inline-block; position: relative; left: 17%; top: 10px;">
        <button class="btn btn-primary" type="submit" name="Create">Submit</button>
        <a class="btn btn-secondary" role="button" href="javascript:history.back()" style="color:inherit">Back</a>
    </div>
</form>
