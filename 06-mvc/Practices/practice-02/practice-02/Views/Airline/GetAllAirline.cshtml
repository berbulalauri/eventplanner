<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

@model IEnumerable<practice_02.Models.AirlineModel>
<div class="container">
    <h1>Airline List</h1>
    <table class="table">
        <thead>
            <tr>
                <td>Airline Name</td>
                <td>Aircraft Count</td>
                <td>Maximum Luggage Weight</td>
                <td>Airline Founding City</td>
                <td>Is International</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.AirlineName</td>
                    <td>@contact.AircraftCount</td>
                    <td>@contact.MaximumLuggageWeight</td>
                    <td>@contact.AirlineFoundingCity</td>
                    <td>@contact.IsInternational</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="submitButtonCentered" style="display: inline-block; position: relative; left: 17%; top: 10px;">
    <a class="btn btn-primary" role="button" href="@Url.Action("AddAirline")" style="color:inherit">Create New</a>
    <a class="btn btn-primary" role="button" href="~/Index" style="color:inherit">Back</a>
</div>
